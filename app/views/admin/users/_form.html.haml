- user = f.object

%fieldset
  .row
    .large-6.columns
      = image_tag user.avatar.thumb.url, size: '68x68'
    .large-6.columns
      = f.input :avatar
  .row
    .large-6.columns
      = f.input :nickname
    .large-6.columns
      = f.input :email
  .row
    .large-6.columns
      = f.input :password
    .large-6.columns
      = f.input :password_confirmation

  = f.submit class: 'button'
