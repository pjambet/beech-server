- beer = f.object

%fieldset
  %legend New Beer
  .row
    .large-6.columns
      = f.input :name, wrapper: :foundation
    .large-3.columns
      = f.input :background_color, wrapper: :foundation
    .large-3.columns
      = f.input :font_color, wrapper: :foundation
  .row
    .large-6.columns
      = f.association :beer_color
    .large-6.columns
      = f.input :country, as: :string

  = f.submit class: 'button'
